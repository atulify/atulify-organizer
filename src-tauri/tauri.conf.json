{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Atulify",
  "version": "1.0.1",
  "identifier": "com.atulify.personal-organizer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Atulify",
        "width": 480,
        "height": 640,
        "visible": false,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$DATA/*"]
      }
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "Personal organizer for tracking work, brag docs, and reminders",
    "longDescription": "Atulify is a personal work companion for tracking tasks, notes, and achievements. It lives in your menu bar and helps you stay organized with reminders and brag doc tracking.",
    "macOS": {
      "minimumSystemVersion": "11.0",
      "entitlements": null,
      "exceptionDomain": null,
      "signingIdentity": null,
      "providerShortName": null
    }
  }
}
